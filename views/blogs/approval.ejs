<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Blogs Pending Approval</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

  <style>
    .card-img-top {
      max-height: 250px;
      object-fit: cover;
    }
  </style>
</head>
<body>

  <div class="container mt-5">
    <h2 class="mb-4">Blogs Pending Approval</h2>

    <% if (blogs.length === 0) { %>
      <div class="alert alert-info">No blogs pending approval.</div>
    <% } else { %>
      <div class="row">
        <% blogs.forEach(blog => { %>
          <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
              
              <% if (blog.image) { %>
                <img src="/uploads/<%= blog.image %>" class="card-img-top" alt="Blog Image">
              <% } else { %>
                <img src="https://via.placeholder.com/600x250?text=No+Image" class="card-img-top" alt="No image">
              <% } %>

              <div class="card-body d-flex flex-column">
                <h5 class="card-title"><%= blog.title %></h5>

                <p class="card-text mb-1">
                  <strong>Sector:</strong> <%= blog.Sector.name %><br>
                  <strong>Author:</strong> <%= blog.author.name %><br>
                  <strong>Created:</strong> <%= blog.createdAt.toDateString() %>
                </p>

                <p class="card-text text-muted mt-2"><%= blog.description %></p>

                <div class="mt-auto d-flex justify-content-between">
                  <a href="/blogs/approve/<%= blog.id %>" class="btn btn-success btn-sm">Approve</a>
                  <a href="/blogs/reject/<%= blog.id %>" class="btn btn-danger btn-sm">Reject</a>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>

      <!-- Pagination -->
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          <% for(let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
        </ul>
      </nav>
    <% } %>
  </div>

</body>
</html>
