<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Create Blog</title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body>
  <div class="container mt-5">
    <h2 class="mb-4">Create Blog</h2>

    <form action="/blogs/create" method="POST" enctype="multipart/form-data" class="p-4 border rounded bg-light shadow-sm">

      <div class="mb-3">
        <label for="title" class="form-label">Title</label>
        <input type="text" name="title" id="title" class="form-control" required />
      </div>

     

      <div class="mb-3">
        <label for="image" class="form-label">Upload Image</label>
        <input type="file" name="image" id="image" class="form-control" required />
      </div>

       <div class="mb-3">
        <label for="description" class="form-label">Description</label>
        <textarea name="description" id="description" class="form-control" rows="4" required></textarea>
      </div>

      <div class="mb-3">
        <label for="sectorId" class="form-label">Select Sector</label>
        <select name="sectorId" id="sectorId" class="form-select" required>
          <% sectors.forEach(sector => { %>
            <option value="<%= sector.id %>"><%= sector.name %></option>
          <% }) %>
        </select>
      </div>

      <div class="mb-3">
        <label class="form-label">Visibility</label><br />
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="isPublic" value="true" id="public" checked />
          <label class="form-check-label" for="public">Public</label>
        </div>
        <div class="form-check form-check-inline">
          <input class="form-check-input" type="radio" name="isPublic" value="false" id="private" />
          <label class="form-check-label" for="private">Private</label>
        </div>
      </div>

      <button type="submit" class="btn btn-primary">Submit for Approval</button>
    </form>
  </div>

  
</body>
</html>
