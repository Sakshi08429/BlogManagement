<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Blogs Pending Approval</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

  <div class="container mt-5">
    <h2 class="mb-4">Blogs Pending Approval</h2>

    <% if (blogs.length === 0) { %>
      <div class="alert alert-info">No blogs pending approval.</div>
    <% } else { %>
      <div class="row">
        <% blogs.forEach(blog => { %>
          <div class="col-md-6 mb-4">
            <div class="card shadow-sm">
              <div class="card-body">
                <h5 class="card-title"><%= blog.title %></h5>
                <p class="card-text">
                  <strong>Sector:</strong> <%= blog.Sector.name %><br>
                  <strong>Author:</strong> <%= blog.author.name %><br>
                  <strong>Created:</strong> <%= blog.createdAt.toDateString() %>
                </p>
    
                
                <a href="/blogs/approve/<%= blog.id %>" class="btn btn-success btn-sm">Approve</a>
                <a href="/blogs/details/<%= blog.id %>" class="btn btn-sm btn-outline-primary">View Details</a>
                <a href="/blogs/reject/<%= blog.id %>" class="btn btn-danger btn-sm">Reject</a>
              </div>
            </div>
          </div>
        <% }); %>
      </div>

     
      <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-center">
          <% for(let i = 1; i <= totalPages; i++) { %>
            <li class="page-item <%= i === currentPage ? 'active' : '' %>">
              <a class="page-link" href="?page=<%= i %>"><%= i %></a>
            </li>
          <% } %>
        </ul>
      </nav>
    <% } %>
  </div>

</body>
</html>
