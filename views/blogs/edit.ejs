<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Edit Blog</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <style>
    body {
      background-color: #f4f6f9;
    }
    .card {
      border-radius: 10px;
      box-shadow: 0 4px 8px rgba(0,0,0,0.05);
    }
    .form-control, .form-select {
      border-radius: 8px;
    }
    .btn-success {
      width: 100%;
      border-radius: 8px;
    }
    h2 {
      font-weight: 600;
    }
    .form-label {
      font-weight: 600;
      color: #343a40;
    }
  </style>
</head>
<body>

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8">
        <div class="card p-4">
          <h2 class="mb-4 text-center">Edit Blog</h2>

          <form action="/blogs/edit/<%= blog.id %>" method="POST" enctype="multipart/form-data">
            
            
            <div class="mb-3">
              <label class="form-label"> Title</label>
              <input type="text" name="title" value="<%= blog.title %>" class="form-control" required />
            </div>

           
            <div class="mb-3">
              <label class="form-label"> Description</label>
              <textarea name="description" class="form-control" rows="4" required><%= blog.description %></textarea>
            </div>

            
            <div class="mb-3">
              <label class="form-label"> Sector</label>
              <select name="sectorId" class="form-select" required>
                <% sectors.forEach(sector => { %>
                  <option value="<%= sector.id %>" <%= blog.sectorId === sector.id ? 'selected' : '' %>><%= sector.name %></option>
                <% }) %>
              </select>
            </div>

          
            <div class="form-check mb-3">
              <input type="checkbox" name="isPublic" class="form-check-input" id="isPublic" <%= blog.isPublic ? 'checked' : '' %> />
              <label class="form-check-label fw-bold" for="isPublic">
                <span class="badge <%= blog.isPublic ? 'bg-danger' : 'bg-success' %>">
                  <%= blog.isPublic ? 'Make Private' : 'Make Public' %>
                </span>
              </label>
            </div>

        
            <div class="mb-3">
              <label class="form-label"> Update Image <small class="text-muted">(optional)</small></label>
              <input type="file" name="image" class="form-control" />
            </div>

           
<div class="d-flex flex-column flex-md-row gap-2 mt-3">
  <button type="submit" class="btn btn-success btn-sm w-50"> Update Blog</button>
  <% if(user.role === 'superadmin') { %>
    <a href="/blogs/superadmin/all" class="btn btn-danger btn-sm w-50"> Cancel</a>
  <% } else if(user.role === 'admin') { %>
    <a href="/blogs/my" class="btn btn-danger btn-sm w-50"> Cancel</a>
  <% } else { %>
    <a href="/blogs/user/all" class="btn btn-danger btn-sm w-50"> Cancel</a>
  <% } %>
 
</div>




          </form>
          
        </div>
      </div>
    </div>
  </div>

</body>
</html>
