<%- include('../partials/header') %>
<div class="container mt-4">
  <h3>Add New User</h3>
  <form action="/admin/add-user" method="POST">
    <div class="form-group">
      <label>Name</label>
      <input type="text" name="name" class="form-control" required>
    </div>

    <div class="form-group mt-2">
      <label>Email</label>
      <input type="email" name="email" class="form-control" required>
    </div>

    <div class="form-group mt-2">
      <label>Password</label>
      <input type="password" name="password" class="form-control" required>
    </div>

    <div class="form-group mt-2">
      <label>Role</label>
      <select name="role" class="form-control" required onchange="toggleSector(this)">
        <option value="user">User</option>
        <option value="admin">Admin</option>
      </select>
    </div>

    <div class="form-group mt-2" id="sectorField" style="display: none;">
      <label>Assign Sector (for Admin)</label>
      <select name="sectorId" class="form-control">
        <% sectors.forEach(sector => { %>
          <option value="<%= sector.id %>"><%= sector.name %></option>
        <% }) %>
      </select>
    </div>

    <button class="btn btn-success mt-3">Add User</button>
  </form>
</div>

<script>
  function toggleSector(select) {
    document.getElementById('sectorField').style.display = 
      select.value === 'admin' ? 'block' : 'none';
  }
</script>
